@model List<CategoryList>

    <div >
        <button class="btn btn-success" asp-action="Create">
            Yeni Kategori Ekle
        </button>
    </div>
    <table class="table table-hover table-dark mt-4 p-3">
        <thead>
            <tr>

                <th>Kategori Id</th>
                <th>Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>


            @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-warning" asp-action="Update"  asp-route-id="@item.Id">Düzenle</a>
                    <a href="" class="btn btn-danger" >Sil?</a>
                </td>
            </tr>
            }


        </tbody>
    </table>