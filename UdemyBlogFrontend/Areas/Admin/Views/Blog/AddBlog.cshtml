@model BlogList


    <form asp-action="AddBlog" method="post" class="form-control mx-auto w-50 p-4 shadow">
        <div class="form-group">
            <label class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label class="form-label">Kısa Tanım</label>
            <input asp-for="ShortDescription" class="form-control" />
        </div>
        <div class="form-group">
            <label class="form-label">İçerik</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label class="form-label">Resim</label>
            <input asp-for="Title" class="form-control" type="file" />
        </div>

        <div class="mt-2">
            <button class="btn btn-success">Bloğu Yayınla</button>
        </div>
    </form>