@model List<BlogList>
<a class="btn btn-success mb-2" asp-action="AddBlog">Yeni Blog ekle</a>

<table class="table table-bordered table-hover p-3 shadow mt-2 table-light">
    <thead>
        <tr>
            <td>Blog Adı</td>
            <td>Blog Başlığı</td>
            <td>Kategorisi</td>
            <td>İşlemler</td>

    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Title</td>
                <td>@blog.ShortDescription</td>
                <td>BlogKategori</td>
                <td>
                    <a asp-action="UpdateBlog" asp-route-id="@blog.Id" class="btn btn-dark">
                        Düzenle
                    </a>
                    <a asp-action="DeleteBlog" asp-route-id="@blog.Id" id="btnDelete" class="btn btn-danger">
                        Sil
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>

