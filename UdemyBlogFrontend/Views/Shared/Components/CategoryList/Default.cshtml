@model List<CategoryListViewModel>


@foreach (var category in Model)
{


    <div class="list-group">
        <a asp-action="Index" asp-route-categoryId="@category.Id" class="list-group-item d-flex justify-content-between align-items-center @(ViewBag.ActiveCategory?.ToString()==category.Id.ToString()?"active":"") ">
            @category.Name
            <span class="badge bg-dark rounded-pill">@category.BlogCount</span>
        </a>

    </div>
}

