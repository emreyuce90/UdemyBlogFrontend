@model BlogList
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var comments = (List<CommentListViewModel>)ViewBag.Comments;
}

<div class="row">



    <!-- Post Content Column -->
    <div class="col-lg-12">

        <!-- Title -->
        <h1 class="mt-4">@Model.Title</h1>

        <!-- Author -->


        <hr>

        <!-- Date/Time -->
        <p>@Model.ReleaseDate</p>

        <hr>

        <!-- Preview Image -->
        <getblogimage Enum="@BlogImageEnums.BlogDetail" id="@Model.Id"></getblogimage>

        <hr>

        <!-- Post Content -->

        @Html.Raw(Model.Description)
        <hr>

        <!-- Comments Form -->
        <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>


        @if(comments.Count > 0)
        {
            @foreach (var c in comments)
            {
                <!-- Comment with nested comments -->
                <div class="media mb-4">
                    <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                    <div class="media-body">
                       
                        <h5 class="mt-0">@c.AuthorName</h5>
                        @c.Description
                       
                        <button class="btn btn-danger">Cevapla</button>
                        @if (c.SubComments.Count > 0)
                        {
                            foreach (var sc in c.SubComments)
                            {
                                <div class="media mt-4 ml-4">
                                    <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                                    <div class="media-body">
                                        <h5 class="mt-0">@sc.AuthorName</h5>
                                        
                                        @sc.Description
                                      
                                    </div>
                                    <button class="btn btn-danger mr-0">Cevapla</button>
                                </div>
                            }
                        }

                    </div>
                </div>
            }
        }


    </div>

</div>
