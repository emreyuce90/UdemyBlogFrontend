@model SignInModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <form asp-action="SignIn" method="post" class="w-50 mx-auto shadow mt-4 p-4">
        <div class="form-group">
            <label>Kullanıcı Adınız:</label>
            <input asp-for="@Model.UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Şifreniz:</label>
            <input asp-for="@Model.Password" class="form-control" type="password" />
        </div>
        <div class="form-group">
            <button class="btn btn-info mt-2 btn-block" type="submit">Giriş Yap</button>
        </div>
    </form>

